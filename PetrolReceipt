        Scanner input = new Scanner(System.in);

        // System.out.println("Petrol Receipt");
        System.out.println("Aoibhe's Garage");

        System.out.println("");
        System.out.println("20-AUG-2020\t14:00PM\n");

        System.out.println("");

        System.out.println("Litres: 44.00");
        System.out.println("Price/Liter: 1.37");
